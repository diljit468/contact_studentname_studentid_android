<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:padding="15dp"
    app:cardCornerRadius="15dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_edit_black_24dp"
            android:padding="8dp"
            android:id="@+id/edit"
            android:layout_marginTop="30dp"
            android:layout_alignParentRight="true"
            />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_delete_black_24dp"
            android:padding="8dp"
            android:layout_below="@+id/edit"
            android:id="@+id/delete"
            android:layout_alignParentRight="true"
            />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:layout_toLeftOf="@+id/edit"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Munish Choudhary"
            android:drawableLeft="@drawable/ic_person_outline_black_24dp"
            android:drawablePadding="10dp"
            android:textColor="@color/gray"
            android:layout_marginTop="5dp"
            android:id="@+id/tv_name"
            android:textSize="17sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="choudhary@munish.com"
            android:textColor="@color/gray"
            android:drawableLeft="@drawable/ic_mail_black_24dp"
            android:drawablePadding="10dp"
            android:id="@+id/tv_mail"
            android:layout_marginTop="10dp"
            android:textSize="17sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9816161040"
            android:layout_marginTop="10dp"
            android:id="@+id/tv_phone"
            android:drawableLeft="@drawable/ic_phone_black_24dp"
            android:drawablePadding="10dp"

            android:textColor="@color/gray"
            android:textSize="17sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vill Samkehar"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:drawableLeft="@drawable/ic_person_pin_circle_black_24dp"
            android:drawablePadding="10dp"
            android:textColor="@color/gray"
            android:id="@+id/tv_address"
            android:textSize="17sp"/>


    </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>